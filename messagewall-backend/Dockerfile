# Use the official Node.js image as a base
FROM node:16-alpine

# Set the working directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Expose the default port that the app runs on
EXPOSE 3000

# Start the server
CMD ["node", "index.js"]
